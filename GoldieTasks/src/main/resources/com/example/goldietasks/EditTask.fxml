<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="345.0" styleClass="MyForm" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.goldietasks.Controller.EditTaskController">

            <VBox fx:id="MyForm" layoutY="4.0" prefHeight="450.0" prefWidth="345.0" spacing="2.0" styleClass="contentForm" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label fx:id="labelTitles" text="Titre" textFill="#7670c4">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
         </Label>
            <TextField fx:id="txtTitle" prefHeight="25.0" prefWidth="323.0" styleClass="nomalinput" />
         <Label text="Type" textFill="#7670c4">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin>
         </Label>
         <ComboBox fx:id="CmbType" prefHeight="25.0" prefWidth="305.0" styleClass="nomalinput" />
            <Label text="Description" textFill="#7670c4">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
         </Label>
            <TextArea fx:id="txtContent" prefHeight="114.0" prefWidth="360.0" styleClass="nomalinput" />
            <HBox alignment="CENTER" prefHeight="29.0" prefWidth="305.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <children>
                  <Button onAction="#Submit" prefHeight="33.0" prefWidth="87.0" styleClass="primaryBtn" text="Enregistrer">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Button>
                  <Button onAction="#CloseFrame" prefHeight="33.0" prefWidth="79.0" text="Annuler">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                     <styleClass>
                        <String fx:value="primaryBtn" />
                        <String fx:value="cancelBtn" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
</AnchorPane>
